{
  "manifest_version": 2,
  "name": "Scrypter",
  "version": "1.0",
  "description": "Injects your JS scripts into any page.",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "194": "icons/favicon-194x194.png"
  },
  "permissions": ["<all_urls>", "storage"],
  "browser_action": {
    "default_icon": "icons/favicon-194x194.png",
    "default_title": "Scrypter",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/index.js"],
      "run_at": "document_end"
    }
  ]
}
